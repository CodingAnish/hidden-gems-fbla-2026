{
  "build": {
    "beforeDevCommand": ".venv/bin/python -m web.app > /tmp/flask.log 2>&1 &",
    "devPath": "http://localhost:5001",
    "beforeBuildCommand": "echo 'Build ready'"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": [
        "dmg",
        "msi",
        "appimage"
      ],
      "identifier": "com.hiddengems.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.png"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Hidden Gems",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "http://localhost:5001"
      }
    ]
  },
  "package": {
    "productName": "Hidden Gems",
    "version": "1.0.0"
  }
}
